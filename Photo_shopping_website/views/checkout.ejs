<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avery | Find Your Piexls | Checkout</title>    
    <!--Google font setting-->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/styles/checkout.css" />
</head>
<script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous">
</script>
<body>
    <header>
      <div class="logo">
        <img src="../public/images/logo.png" alt="Logo" />
        <h1>Avery Photo Shop</h1>
      </div>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/order">Order</a></li>
          <li><a href="/cart">Cart</a></li>
        </ul>
      </nav>
    </header>
    
    <main>
      <section class="table">
        <h1>Check Out</h1>
          <table>
            <tr>
              <th>First Name</th>
              <td colspan="2"><input type="text" id="FName" name="FName" minlength="1" maxlength="20"/></td>
            </tr>
            <tr>
              <th>Last Name</th>
              <td colspan="2"><input type="text" id="LName" name="LName"minlength="1" maxlength="25"/></td>
            </tr>
            <tr>
              <th>Delivery Address</th>
              <td colspan="2"><input type="text" id="address" name="address"/></td>
            </tr>
            <tr>
              <th>Telephone Number</th>
              <td colspan="2"><input type="text" id="Telephone" name="Telephone"/></td>
            </tr>
            <tr>
              <th>Sales Type</th>
              <td colspan="2" id="SalesType">
                <input type="radio" id="cash" class="radioinput" name="SalesType" value="Cash" checked />
                <label for="cash">Cash</label>
                <br>
                <input type="radio" id="credit" class="radioinput" name="SalesType" value="Credit" />
                <label for="credit">Credit</label>
                <br>
              </td>
            </tr>
            <tr>
              <th>Credit Card Type</th>
              <td colspan="2" class="creditCardInfoRow">
                <input type="radio" id="AX" class="radioinput creditCardInfo" name="CardType" value="AX" checked disabled="disabled"/>
                <label for="AX">AX</label>
                <br>
                <input type="radio" id="V" class="radioinput creditCardInfo" name="CardType" value="V" disabled="disabled"/>
                <label for="V">V</label>
                <br>
              </td>
            </tr>
            <tr>
              <th>Credit Card Number</th>
              <td colspan="2" class="creditCardInfoRow">
                <input class="creditCardInfo" type="text" id="creditCardNumber" name="creditCardNumber" disabled="disabled" placeholder="XXXX-XXXXXX-XXXXX"/>
              </td>
            </tr>
            <tr>
              <th>Credit Card Expiration Date</th>
              <td colspan="1" class="creditCardInfoRow">
                <input class="creditCardInfo creditExpiration" type="text" id="creditCardMonth" name="creditCardMonth" disabled="disabled"/></td>
              <td colspan="1"  class="creditCardInfoRow">
                <input class="creditCardInfo creditExpiration" type="text" id="creditCardYear" name="creditCardYear" disabled="disabled"/></td>
            </tr>
            <tr>
              <th>Sales Amount</th>
              <td colspan="2"><label id="amountlabel"><%= amount %></label></td>
            </tr>
            <tr>
              <th>Finalize</th>
              <td colspan="2"><button type="button">Checkout</button></td>
            </tr>
          </table>
      </section>
    </main>
    
    <footer>
      <div class="logo">
        <h2>Avery Photo Shop</h2>
        <br>
        <h3>47671 Westinghouse Dr, Fremont, CA 94539
          <br>
          +1 123-321-0000
        </h3>
      </div>
      <section class="links">
        <a href="#"><img src="../public/images/fb.svg" alt="facebook" /></a>
        <a href="#"><img src="../public/images/ig.svg" alt="instagram" /></a>
        <a href="#"><img src="../public/images/twitter.svg" alt="twitter" /></a>
        <a href="#"><img src="../public/images/youtube.svg" alt="youtube" /></a>
      </section>
    </footer>
</body>
<script>
  function creditMode() { 
    $(".creditCardInfo").each(function (f) {
        this.disabled = "";
    });
  }

  function cashMode() { 
    $(".creditCardInfo").each(function (f) {
        this.disabled = "disabled";
    });
  }

  function AXMode() { 
    $("#creditCardNumber").attr('placeholder',"XXXX-XXXXXX-XXXXX");
  }

  function VMode() { 
    $("#creditCardNumber").attr('placeholder',"XXXX-XXXX-XXXX-XXXX");
  }

  $(document).ready(function() {
    $('input[type=radio][name="SalesType"]').change(function() {
        let saletp = $(this).val();
        console.log(saletp)
        if (saletp == "Cash") {
          cashMode();
        } else {
          creditMode();
        }
    });
  });

  $(document).ready(function() {
    $('input[type=radio][name="CardType"]').change(function() {
        let cardtp = $(this).val();
        console.log(cardtp)
        if (cardtp == "AX") {
          AXMode();
        } else {
          VMode();
        }
    });
  });


</script>
</html>